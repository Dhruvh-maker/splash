<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/back3">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_margin="40dp" />

    <!-- Mood Question -->
    <TextView
        android:id="@+id/mood_question_text"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/what_s_your_mood_today"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- First Row of Moods -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgRomantic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:src="@drawable/romantic"
            android:contentDescription="Romantic Mood" />

        <ImageView
            android:id="@+id/imgFresh"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:src="@drawable/fresh"
            android:contentDescription="Fresh Mood" />
    </LinearLayout>

    <!-- Second Row of Moods -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAngry"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:src="@drawable/angry"
            android:contentDescription="Angry Mood" />

        <ImageView
            android:id="@+id/imgSad"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:src="@drawable/sad"
            android:contentDescription="sad Mood" />
    </LinearLayout>
</LinearLayout>

